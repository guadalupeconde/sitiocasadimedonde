<div class="container" style="margin-top: 100px;">
    <div class="row">
        <div class="col">
            <p style="float: right;">
                <span>hola {{persona}}</span>
                <a href="/admin/login/logout" class="btn btn-danger">cerrar sesion <i class="fas fa-sing-out"
                        aria-hidden="true"></i></a>
            </p>
        </div>
    </div> {{!--fin fila 1--}}
    <div class="row">
        <div class="col-7">
            <span>listado de novedades</span>
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"
                    aria-hidden="true"></i>nuevo</a>

        </div>
    </div> {{!--fin fila 2--}}
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First</th>
                <th scope="col">Last</th>
                <th scope="col">Handle</th>
                <th scope="col" class="text-rigth">acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each novedades}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{titulo}}</td>
                <td>{{subtitulo}}</td>
                <td>{{cuerpo}}</td>
                <td class="text-rigth">
                    <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i
                            class="fas fa-pencil-alt"></i></a>
                    <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i
                            class="fas fa-trash"></i></a>

                </td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>Jacob</td>
                <td>Thornton</td>
                <td>@fat</td>
            </tr>
            <tr>
                <th scope="row">3</th>
                <td colspan="2">Larry the Bird</td>
                <td>@twitter</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>