        <section class="formulariodecontacto" id="contacto">
            <div class="contacto">
                <h1>Contactanos</h1>
                <form class="row g-3" action="/" method="post">
                    <div class="col-md-6">
                        <h2>Nombre</h2>
                        <input type="text" class="form-control" id="nombre" name="nombre">
                    </div>
                    <div class="col-md-6">
                        <h2>Apellido</h2>
                        <input type="text" class="form-control" id="apellido" name="apellido">
                    </div>
                    <div class="col-12">
                        <h2>Email</h2>
                        <input type="email" class="form-control" id="email" placeholder="email@email.com" name="email">
                    </div>
                    <div class="col-12">
                        <h2>Celular</h2>
                        <input type="text" class="form-control" id="celular" placeholder="..." name="celular">
                    </div>
                    <div class="mb-3">
                        <h2>Comentarios</h2>
                        <textarea class="form-control" id="mensaje" rows="3" name="mensaje"></textarea>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </form>
                <p>{{message}}</p>
            </div>
        </section>
    </div>
</div>